<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="privacy-policy-link" remove="true"/>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="custom-footer-link">
                <arguments>
                    <argument name="label" xsi:type="string">Weather Information</argument>
                    <argument name="path" xsi:type="string">weathermodule/index/weather/</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
